<% include ./partials/header %> 
<div class="container">
<div class="my-center">
    <h1 class="text-center">Sign Up!</h1>
    <form action="/register" method="post">
        <div class="form-group">
            <input class="form-control" type="text" name="username" placeholder="username" maxlength="30" required>
        </div>
        <div class="form-group">
            <input class="form-control" type="password" name="password" placeholder="password" maxlength="30" required>
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Sign Up</button>
        </div>
        <a href="/photo">Go Back</a>
    </form>
</div>
</div>
<% include ./partials/footer %> 
