<% include ../partials/header.ejs %>
        <div class="container">
            <div class="row">
                <h1 style="text-align: center">Edit <%= photo.title%></h1>

                <div style="width: 50%; margin-left: auto; margin-right: auto;">
                    <form action="/photo/<%= photo._id%>/?_method=PUT" method="POST">
                        <div class="form-group">
                            <input  class ="form-control" type = "text" name = photo[title] value="<%= photo.title%>" minlength="1", maxlength="20">
                        </div>
                        <div class="form-group">
                            <input class ="form-control" type = "text" name = photo[source] value="<%= photo.source%>" minlength="1">
                        </div>
                        <div class="form-group">
                            <textarea class ="form-control" name = photo[description] value="<%= photo.description%>" style="height:200px" minlength="1"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-lg btn-primary btn-block">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
<% include ../partials/footer.ejs %>